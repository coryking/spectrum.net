<Page
    x:Class="CorySynthUI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CorySynthUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding ViewModel, RelativeSource={RelativeSource Self}}"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="AmplitudeValueSelector">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Index}"/>
                <Slider Height="200" Value="{Binding Value, Mode=TwoWay}" Orientation="Vertical" Minimum="0" Maximum="1" StepFrequency="0.01" TickFrequency="0.1"/>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="10">
        <Grid.Resources>
            <Style TargetType="StackPanel">
                <Setter Property="Margin" Value="10,0,10,0"/>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource HeaderTextBlockStyle}">Cory Synth</TextBlock>
        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Button  Content="Start" Name="StartButton" Click="StartButton_Click"/>
            <Button  Content="Stop" Name="StopButton" Click="StopButton_Click"/>
            <Button Content="Load Reverb" Name="LoadReverb" Click="LoadReverb_Click"/>
            <Button Content="Reset Sounds" Name="ResetSounds" Click="ResetSounds_Click"/>
            <ComboBox Name="MidiDevList" ItemsSource="{Binding MidiDevices}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" DataContext="{Binding PadSound, Mode=TwoWay}">
            <TextBlock Style="{StaticResource SubheaderTextBlockStyle}">Pad Synth</TextBlock>
            <TextBlock Style="{StaticResource TitleTextBlockStyle}">Harmonics</TextBlock>
            <Slider Maximum="12" Minimum="1" Name="PadHarmonics" Value="{Binding Harmonics, Mode=TwoWay}" StepFrequency="1" TickFrequency="1"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>

                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Style="{StaticResource TitleTextBlockStyle}">Bandwidth</TextBlock>
                <Slider Grid.Column="0" Grid.Row="1" Maximum="1000" Minimum="0" Name="PadBandwidth" Value="{Binding Bandwidth, Mode=TwoWay}" StepFrequency="1" TickFrequency="5"/>
                
                <TextBlock Grid.Column="1" Grid.Row="0" Style="{StaticResource TitleTextBlockStyle}">Bandwidth Scale</TextBlock>
                <Slider Grid.Column="1" Grid.Row="1"  Minimum="-2" Maximum="2" Name="PadBandwidthScale" Value="{Binding BandwidthScale, Mode=TwoWay}" StepFrequency="0.1" TickFrequency="0.2"/>
                
                <TextBlock Grid.Column="0" Grid.Row="2" Style="{StaticResource TitleTextBlockStyle}">Attack (ms)</TextBlock>
                <Slider Grid.Column="0" Grid.Row="3" Minimum="0" Maximum="1000"  Value="{Binding AttackMs, Mode=TwoWay}" StepFrequency="1" TickFrequency="10"/>
                
                <TextBlock  Grid.Column="1" Grid.Row="2" Style="{StaticResource TitleTextBlockStyle}">Release (ms)</TextBlock>
                <Slider  Grid.Column="1" Grid.Row="3" Minimum="0" Maximum="1000" Value="{Binding ReleaseMs, Mode=TwoWay}" StepFrequency="1" TickFrequency="10"/>
                
                <TextBlock Grid.Column="0" Grid.Row="4" Style="{StaticResource TitleTextBlockStyle}">Decay (ms)</TextBlock>
                <Slider Grid.Column="0" Grid.Row="5" Minimum="0" Maximum="1000"  Value="{Binding DecayMs, Mode=TwoWay}" StepFrequency="1" TickFrequency="10"/>
                
                <TextBlock  Grid.Column="1" Grid.Row="4" Style="{StaticResource TitleTextBlockStyle}">Sustain Level</TextBlock>
                <Slider  Grid.Column="1" Grid.Row="5" Minimum="0.01" Maximum="1" Value="{Binding SustainLevel, Mode=TwoWay}" StepFrequency="0.05" TickFrequency="0.1"/>

            </Grid>
            <TextBlock Style="{StaticResource TitleTextBlockStyle}">Harmonic Type</TextBlock>
            <ComboBox Name="PadHarmonicTypes" ItemsSource="{Binding HarmonicTypeList}" SelectedValue="{Binding HarmonicTypeString, Mode=TwoWay}"/>
            <ItemsControl ItemsSource="{Binding Amplitudes}" ItemTemplate="{StaticResource AmplitudeValueSelector}" ScrollViewer.HorizontalScrollMode="Auto">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        <Button Name="RegeneratePadSound" Click="RegeneratePadSound_Click">Rebuild Pad Sound</Button>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" DataContext="{Binding EffectsFilter,Mode=TwoWay}">
            <TextBlock Style="{StaticResource SubheaderTextBlockStyle}">Low Pass Filter</TextBlock>
            <TextBlock Style="{StaticResource TitleTextBlockStyle}">Cutoff (hZ)</TextBlock>
            <Slider Maximum="22050" Minimum="1" Name="EffectsCutoff" Value="{Binding LowPassCutoff, Mode=TwoWay}" StepFrequency="0.5" TickFrequency="220.5"/>
             <TextBlock Style="{StaticResource SubheaderTextBlockStyle}">Reverb Filter</TextBlock>
            <StackPanel Orientation="Vertical" DataContext="{Binding GhettoReverbFilter, Mode=TwoWay}">
                <StackPanel Orientation="Horizontal">
                    <CheckBox  IsChecked="{Binding IsEnabled, Mode=TwoWay}"/>
                    <TextBlock Style="{StaticResource TitleTextBlockStyle}">Enabled</TextBlock>
                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0" Grid.Row="0" Style="{StaticResource TitleTextBlockStyle}">Reverb Delay (ms)</TextBlock>
                    <Slider Grid.Column="0" Grid.Row="1" Maximum="1000" Minimum="0" Name="EffectsReverbDelay" Value="{Binding Delay, Mode=TwoWay}" StepFrequency="1" TickFrequency="5"/>
                    <TextBlock Grid.Column="1" Grid.Row="0" Style="{StaticResource TitleTextBlockStyle}">Reverb Decay</TextBlock>
                    <Slider Grid.Column="1" Grid.Row="1" Maximum="0.45" Minimum="0" Name="EffectsReverbDecay" Value="{Binding Decay, Mode=TwoWay}" StepFrequency="0.01" TickFrequency="0.05"/>
                </Grid>
                    <StackPanel Orientation="Horizontal">
                    <CheckBox  IsChecked="{Binding UseEQ, Mode=TwoWay}"/>
                    <TextBlock Style="{StaticResource TitleTextBlockStyle}">Use EQ</TextBlock>
                </StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0" Grid.Row="0" Style="{StaticResource TitleTextBlockStyle}">LPF Cutoff (hZ)</TextBlock>
                    <Slider Grid.Column="0" Grid.Row="1" Maximum="22050" Minimum="1" Value="{Binding LowPassCutoffFrequency, Mode=TwoWay}" StepFrequency="0.5" TickFrequency="220.5"/>
                    <TextBlock Grid.Column="1" Grid.Row="0" Style="{StaticResource TitleTextBlockStyle}">HPF Cutoff (hZ)</TextBlock>
                    <Slider Grid.Column="1" Grid.Row="1" Maximum="22050" Minimum="1"  Value="{Binding HighPassCutoffFrequency, Mode=TwoWay}" StepFrequency="0.5" TickFrequency="220.5"/>

                </Grid>
                </StackPanel>
            <TextBlock Style="{StaticResource SubheaderTextBlockStyle}">Chorus</TextBlock>
            <ScrollViewer VerticalScrollBarVisibility="Visible">
                <StackPanel Orientation="Vertical" DataContext="{Binding ChorusEffectFilter, Mode=TwoWay}">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox  IsChecked="{Binding IsEnabled, Mode=TwoWay}"/>
                        <TextBlock Style="{StaticResource TitleTextBlockStyle}">Enabled</TextBlock>
                    </StackPanel>
                    <TextBlock Style="{StaticResource TitleTextBlockStyle}">Chorus Length (ms)</TextBlock>
                    <Slider Maximum="250" Minimum="1"  Value="{Binding ChorusLength, Mode=TwoWay}" StepFrequency="1" TickFrequency="5"/>
                    <TextBlock Style="{StaticResource TitleTextBlockStyle}">Voices</TextBlock>
                    <Slider Maximum="8" Minimum="1"  Value="{Binding Voices, Mode=TwoWay}" StepFrequency="1" TickFrequency="1"/>
                    <TextBlock Style="{StaticResource TitleTextBlockStyle}">Rate (hz)</TextBlock>
                    <Slider Maximum="16" Minimum="0.1"  Value="{Binding Rate, Mode=TwoWay}" StepFrequency="0.1" TickFrequency="1"/>
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
       
    </Grid>
</Page>
